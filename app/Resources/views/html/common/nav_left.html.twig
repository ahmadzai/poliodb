        <!--=== Navigation ===-->
        <ul id="nav">
            <li class="{% if(app.session.get('visited_url') == 'dashboard_main') %}current{% endif %}">
                <a href="{{ path('dashboard_main') }}">
                    <i class="icon-dashboard"></i>
                    Dashboard
                </a>
            </li>
            {% for d_menu in menu %}
                <li {% if app.session.get('visited_url') == 'dashboard_'~d_menu.tableName %}
                    class="current open"
                        {% endif %}>
                    <a href="javascript:void(0);">
                        <i class="icon-plus"></i>
                        {{ d_menu.tableLongName }}
                    </a>
                    <ul class="sub-menu">
                        {% if d_menu.dashboard == 1 %}
                            <li {% if app.session.get('visited_url') == 'dashboard_'~d_menu.tableName %}
                                class="current"
                                    {% endif %}>

                                <a href="{{ path('dashboard_'~d_menu.tableName) }}">
                                    <i class="icon-bar-chart"></i>
                                    Dashboard
                                </a>

                            </li>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                {% if d_menu.entryForm == 1 %}
                                    <li {% if app.session.get('visited_url') == 'entry_'~d_menu.tableName %}
                                        class="current"
                                            {% endif %}>
                                        <a href="{{ path('entry_'~d_menu.tableName) }}">
                                            <i class="icon-edit"></i>
                                            Data Entry
                                        </a>
                                    </li>
                                {% endif %}
                            {% endif %}
                        {% endif %}
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            {% if d_menu.uploadForm == 1 %}
                                <li {% if app.session.get('visited_url') == d_menu.tableName~'_upload' %}
                                    class="current"
                                        {% endif %}>
                                    <a href="{{ path(d_menu.tableName~'_upload') }}">
                                        <i class="icon-cloud-upload"></i>
                                        Upload Data
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}

                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            {% if d_menu.uploadForm == 1 %}
                                <li {% if app.session.get('visited_url') == d_menu.tableName~'_download' %}
                                    class="current"
                                        {% endif %}>
                                    <a href="{{ path('data_download', {'table':d_menu.tableName}) }}">
                                        <i class="icon-cloud-download"></i>
                                        Download Data
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    </ul>
                </li>
            {% endfor %}

        </ul>

